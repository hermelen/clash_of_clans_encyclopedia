{# src/Her/ItemsBundle/Resources/views/Weapon/form.html.twig #}

<div>
  <h3>Formulaire Défense Niveau</h3>
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}

        {{ form_label(form.generalWeapon, "Défense", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.generalWeapon) }}
        <div class="col-sm-4">
          {{ form_widget(form.generalWeapon) }}
        </div>

        {{ form_label(form.level, "Niveau", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.level) }}
        <div class="col-sm-4">
          {{ form_widget(form.level, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_label(form.damagePerSecond, "Dégâts par seconde (arme)", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.damagePerSecond) }}
        <div class="col-sm-4">
          {{ form_widget(form.damagePerSecond, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_label(form.damage, "Dégâts unique (piège)", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.damage) }}
        <div class="col-sm-4">
          {{ form_widget(form.damage, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_label(form.hitDamage, "Dégâts par tir (arme)", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.hitDamage) }}
        <div class="col-sm-4">
          {{ form_widget(form.hitDamage, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_label(form.collateral, "Dégâts si destruction", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.collateral) }}
        <div class="col-sm-4">
          {{ form_widget(form.collateral, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_label(form.life, "Points de vie", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.life) }}
        <div class="col-sm-4">
          {{ form_widget(form.life, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_label(form.improvementDuration, "Durée d'amélioration", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.improvementDuration) }}
        <div class="col-sm-4">
          <div class="form-control durationDetailContainer" id="durationDetailContainer">
          </div>
        </div>

        {{ form_label(form.improvementCost, "Coût d'amélioration", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.improvementCost) }}
        <div class="col-sm-4">
          {{ form_widget(form.improvementCost, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_label(form.exp, "Expérience acquise", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.exp) }}
        <div class="col-sm-4">
          {{ form_widget(form.exp, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_label(form.trainingCost, "Coût de réarmement", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.trainingCost) }}
        <div class="col-sm-4">
          {{ form_widget(form.trainingCost, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_label(form.resource, "Ressource pour réarmement", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.resource) }}
        <div class="col-sm-4">
          {{ form_widget(form.resource, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_label(form.child, "Piège: nb squelettes", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.child) }}
        <div class="col-sm-4">
          {{ form_widget(form.child, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_label(form.damageCapacity, "Piège: capacity d'expulsion", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.damageCapacity) }}
        <div class="col-sm-4">
          {{ form_widget(form.damageCapacity, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_label(form.townHall, "Hotel de Ville requis", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.townHall) }}
        <div class="col-sm-4">
          {{ form_widget(form.townHall, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_label(form.image, "Image", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.image) }}
        <div class="col-sm-4">
          {{ form_widget(form.image) }}
        </div>

        <div class="col-sm-12">
          {{ form_widget(form.improvementDuration, {'attr': {'class': 'hide form-control improvementDuration'}}) }}
        </div>

        <div class="col-sm-2">
        </div>
        <div class="col-sm-10">
          {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>

    {{ form_end(form) }}
</div>

<div class="hidden durationDetail" id="durationDetail">
  <form class="form_duration"  action="#" method="post">
    <table class="table_duration">
      <tr>
        <th class = "td_duration">Jours:</td>
        <th class = "td_duration">Heures:</td>
        <th class = "td_duration">Minutes:</td>
        <th class = "td_duration">Secondes:</td>
      </tr>
      <tr>
        <td class = "td_duration"><input class = "input_duration" type="number" name="durationDays" id="durationDays" value="0"></td>
        <td class = "td_duration"><input class = "input_duration" type="number" name="durationHours" id="durationHours" value="0"></td>
        <td class = "td_duration"><input class = "input_duration" type="number" name="durationMinutes" id="durationMinutes" value="0"></td>
        <td class = "td_duration"><input class = "input_duration" type="number" name="durationSeconds" id="durationSeconds" value="0"></td>
      </tr>
      <td><button class = "btn-danger"type="button" id="submitDuration" name="submitDuration button">Valider Durée Amélioration</button></td>
    </table>
  </form>
</div>

<div class="clearfix"></div>
