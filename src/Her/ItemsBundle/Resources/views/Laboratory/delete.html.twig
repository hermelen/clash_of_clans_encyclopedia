{# src/Her/ItemsBundle/Resources/views/Laboratory/delete.html.twig #}

{% extends "HerItemsBundle::layout_default.html.twig" %}

{% block title %}
  Supprimer un Laboratoire - {{ parent() }}
{% endblock %}

{% block body %}

  <h2>Supprimer un Laboratoire</h2>

  <p>
    Etes-vous certain de vouloir supprimer le Laboratoire niveau {{ single.level }} ?
  </p>

  {# On met l'id de l'annonce dans la route de l'action du formulaire #}
  <form action="{{ path('her_laboratory_delete', {'level': single.level}) }}" method="post">
    <a href="{{ path('her_laboratory_single', {'level': single.level}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour au Laboratoire niveau {{ single.level }}
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>

{% endblock %}
