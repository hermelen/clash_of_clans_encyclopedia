{# src/Her/ItemsBundle/Resources/views/Barrack/form.html.twig #}

<div>
  <h3>Formulaire Pouvoir {{ form.vars.general }}</h3>
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}

    {{ form_label(form.generalSpecialHero, "Pouvoir", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.generalSpecialHero) }}
    <div class="col-sm-4">
      {{ form_widget(form.generalSpecialHero, {'attr': {'class': 'form-control'}}) }}
    </div>

    {{ form_label(form.level, "Niveau", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.level) }}
    <div class="col-sm-4">
      {{ form_widget(form.level, {'attr': {'class': 'form-control'}}) }}
    </div>

    {{ form_label(form.damageImprovement, "Augmentation dégâts", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.damageImprovement) }}
    <div class="col-sm-4">
      {{ form_widget(form.damageImprovement, {'attr': {'class': 'form-control'}}) }}
    </div>

    {{ form_label(form.lifeImprovement, "Récupération vie", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.lifeImprovement) }}
    <div class="col-sm-4">
      {{ form_widget(form.lifeImprovement, {'attr': {'class': 'form-control'}}) }}
    </div>

    {{ form_label(form.speedImprovement, "Augmentation vitesse", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.speedImprovement) }}
    <div class="col-sm-4">
      {{ form_widget(form.speedImprovement, {'attr': {'class': 'form-control'}}) }}
    </div>

    {{ form_label(form.child, "Nombre troupes générées", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.child) }}
    <div class="col-sm-4">
      {{ form_widget(form.child, {'attr': {'class': 'form-control'}}) }}
    </div>

    {{ form_label(form.specialDuration, "Durée du pouvoir", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.specialDuration) }}
    <div class="col-sm-4">
      <div class="form-control durationDetailContainer" id="durationDetailContainer">
      </div>
    </div>

    {{ form_label(form.lifePercent, "% Points de Vie bonus", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.lifePercent) }}
    <div class="col-sm-4">
      {{ form_widget(form.lifePercent, {'attr': {'class': 'form-control'}}) }}
    </div>

    {{ form_label(form.maxLifeImprovement, "Bonus Vie maximum", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.maxLifeImprovement) }}
    <div class="col-sm-4">
      {{ form_widget(form.maxLifeImprovement, {'attr': {'class': 'form-control'}}) }}
    </div>

    {{ form_label(form.heroLevels, "Niveau du Héro", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.heroLevels) }}
    <div class="col-sm-4">
      {{ form_widget(form.heroLevels, {'attr': {'class': 'checkbox'}}) }}
    </div>

    <div class="col-sm-12">
      {{ form_widget(form.specialDuration, {'attr': {'class': 'hide form-control improvementDuration'}}) }}
    </div>

    <div class="col-sm-2">
    </div>
    <div class="col-sm-10">
      {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>

  {{ form_end(form) }}
</div>

<div class="hidden durationDetail" id="durationDetail">
  <form class="form_duration"  action="#" method="post">
    <table class="table_duration">
      <tr>
        <th class = "td_duration">Jours:</td>
        <th class = "td_duration">Heures:</td>
        <th class = "td_duration">Minutes:</td>
        <th class = "td_duration">Secondes:</td>
      </tr>
      <tr>
        <td class = "td_duration"><input class = "input_duration" type="number" name="durationDays" id="durationDays" value="0"></td>
        <td class = "td_duration"><input class = "input_duration" type="number" name="durationHours" id="durationHours" value="0"></td>
        <td class = "td_duration"><input class = "input_duration" type="number" name="durationMinutes" id="durationMinutes" value="0"></td>
        <td class = "td_duration"><input class = "input_duration" type="number" name="durationSeconds" id="durationSeconds" value="0"></td>
      </tr>
      <td><button class = "btn-danger"type="button" id="submitDuration" name="submitDuration button">Valider Durée du Pouvoir</button></td>
    </table>
  </form>
</div>

<div class="clearfix"></div>
